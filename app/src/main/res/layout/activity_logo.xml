<?xml version="1.0" encoding="utf-8"?>
<RelativeLayoutt xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rushro2m.gaodemap.LogoActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/logoMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D999"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="logo位置" />


        <RadioGroup
            android:id="@+id/rg_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左下" />

            <RadioButton
                android:id="@+id/bottom_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="居中" />

            <RadioButton
                android:id="@+id/bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右下" />

        </RadioGroup>
    </LinearLayout>
</RelativeLayoutt>
